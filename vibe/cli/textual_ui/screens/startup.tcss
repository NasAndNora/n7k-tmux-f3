/* F6: Startup screen styles */

#startup-container {
    width: 100%;
    height: 100%;
    align: center middle;
    background: $surface;
}

#startup-text {
    text-style: bold;
    text-align: center;
    width: auto;
}

#startup-enter-hint {
    text-align: center;
    width: auto;
    margin-top: 2;
}

#startup-enter-hint.hidden {
    display: none;
}
